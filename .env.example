# Environment Variables for NECF Attendance System
# Copy this file to .env and update the values as needed

# Application Environment
NODE_ENV=development

# Database Configuration
POSTGRES_DB=necf_attendance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/necf_attendance

# Redis Configuration
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# Backend Configuration
BACKEND_PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:3001
REACT_APP_APP_NAME=NECF Attendance System

# Adminer (Database UI)
ADMINER_PORT=8080

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@necf.org

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# API Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
