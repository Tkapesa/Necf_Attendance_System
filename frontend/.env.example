# Frontend Environment Variables
# Copy this file to .env and update the values as needed

# React Application Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_APP_NAME=NECF Attendance System
REACT_APP_VERSION=1.0.0

# Environment
NODE_ENV=development

# Build Configuration
GENERATE_SOURCEMAP=true
REACT_APP_BUILD_PATH=./dist

# API Configuration
REACT_APP_API_TIMEOUT=10000
REACT_APP_API_RETRY_ATTEMPTS=3

# Authentication Configuration
REACT_APP_JWT_STORAGE_KEY=necf_auth_token
REACT_APP_SESSION_TIMEOUT=1800000

# Feature Flags
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# Analytics Configuration (optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_ENABLE_ANALYTICS=false

# Error Reporting (optional)
REACT_APP_SENTRY_DSN=
REACT_APP_ENABLE_ERROR_REPORTING=false

# PWA Configuration
REACT_APP_ENABLE_PWA=true
REACT_APP_APP_SHORT_NAME=NECF
